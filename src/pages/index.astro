---
import { JarsSelect } from '../components/jars-select';
import Layout from '../layouts/Layout.astro';

const baseUrl = import.meta.env.REMOTE_URL
---

<Layout title="Welcome to Astro.">
  <main>
		<JarsSelect client:load url={`${baseUrl}/api/jars`}></JarsSelect>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
